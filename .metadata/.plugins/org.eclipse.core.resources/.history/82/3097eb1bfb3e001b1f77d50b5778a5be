package ejercicios;

public class Ej001 {
	public static void main(String[] args) {
		
		//ejercicio 1
		double[] A = new double[3];
		double x;
			for (int i=0; i<A.length; i++) {
				A[i] = i*3;
				System.out.println("A[" +i + "] = " +A[i]);
			}
				
			x = A[0]+A[1]+A[2];
			System.out.println("x = " +x);
			
		//ejercicio 2
		int[] B = new int[5];
		B[4]=1;
		B[B[4]]=2;
		B[B[B[4]]]=0;
		B[B[B[B[4]]]]=3;
		B[B[B[B[B[4]]]]]=4;
		
		for(int i=0; i<B.length; i++) {
			System.out.println("B[" +i +"]" +"=" +B[i]);
		}
		
	}
}

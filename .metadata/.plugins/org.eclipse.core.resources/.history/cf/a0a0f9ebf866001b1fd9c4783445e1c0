package arraylist;

public class Ej003Punto {
	private double x;
    private double y;
    private int nPunto;
    private static int contPunto = 0;
    
    //ALT+SHIFT+S
    //CONSTRUCTORES
    public Ej003Punto() {
    	nPunto = contPunto;
    	contPunto++;
    }
    public Ej003Punto(double x, double y) {
    	nPunto = contPunto;
    	contPunto++;
    	this.x = x;
    	this.y = y;
    }
	
    
    //GETTERS
    public double getX() {
		return x;
	}
	public double getY() {
		return y;
	}
    public int getnPunto() {
		return nPunto;
	}
	public static int getContPunto() {
		return contPunto;
	}
	
	
	//SETTERS
	public void setX(double x) {
		this.x = x;
	}
	public void setY(double y) {
		this.y = y;
	}
    public void setnPunto(int nPunto) {
		this.nPunto = nPunto;
	}
	public static void setContPunto(int contPunto) {
		Ej003Punto.contPunto = contPunto;
	}
	
	//TOSTRING
	@Override
	public String toString() {
		return "Punto " +nPunto +" [x = " + x + ", y = " + y + "]";
	}
}
